@page "/learnBlazor/learnRouting/{parameter1}"
@page "/learnBlazor/learnRouting/{parameter1}/{parameter2}"
@page "/learnBlazor/learnRouting"
@page "/learnRouting"
@inject NavigationManager _NavigationManager
<h3>LearnRouting</h3>


<h4>Parameter 1: @Parameter1</h4>
<h4>Parameter 2: @Parameter2</h4>

<a href="learnRouting?Param1=Hello&Param2=Blazor" class="btn btn-primary">Navigate to query parameters</a> 
<button @onclick="NavigateToQueryParam">Navigation ButtonÂ©</button>
<button class="btn btn-success" @onclick="LoadParameters">Load parameters</button>

<h3>Query string params</h3>

<h4>Param 1: @Param1</h4>
<h4>Param 2: @Param2</h4>

@code {
    [Parameter]
    public string Parameter1 { get; set; }
    
    [Parameter]
    public string Parameter2 { get; set; }

    public string Param1 { get; set; }
    public string Param2 { get; set; }

    private void LoadParameters()
    {
        var absoluteURI = new Uri(_NavigationManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(absoluteURI.Query);
        Param1 = query["Param1"];
        Param2 = query["Param2"];

    }

    private void NavigateToQueryParam()
    {
        _NavigationManager.NavigateTo("learnRouting?Param1=Hello&Param2=Blazor");
    }
}